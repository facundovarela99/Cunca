<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Inicio</title>
</head>

<body>
    <main>
        <% if (typeof data==='undefined' ) { %>
            <h1>ESTA ES LA PÁGINA DE INICIO</h1>
            <h1>NO HAS INICIADO SESIÓN</h1>
            <form style="width: 25%;" class="formLogin" autocomplete="off">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Nombre de usuario o correo electrónico</label>
                    <input type="text" class="form-control" id="inputUsername" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="inputContrasenia" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Recordar contraseña</label>
                </div>
                <button type="submit" class="btn btn-primary">Ingresar</button>
                <button id="btnRegistrarse" type="button" class="btn btn-primary">Registrarse</button>
            </form>
            <div id="divResultado"></div>
            <% } else if (typeof data !== 'undefined') { %>
                <h1>ESTA ES LA PÁGINA DE INICIO</h1>
                <h1>BIENVENIDO! <%= data.username %></h1>
                <button id="btnCerrarSesion"><h1>Cerrar sesión</h1></button>
            <% } %>
    </main>
<!--BOOTSTRAP CDN-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
    <!--JS-->
    <script type="module" src="/js/index.js"></script>
    <script type="module" src="/js/main.js"></script>
</body>

</html>